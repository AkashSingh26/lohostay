  <div class="banner" style="background-image: url('<%= url_for(@villa.images.first) %>'); background-size: cover; background-position: center; background-repeat: no-repeat; height: 700px;">
  </div>
   <div class="container mt-3">
    <div class="row">
      <div class="col-md-7">
        <h1 class="my-3 text-xl-left text-info display-1"><%= @villa.name %></h1>
      </div>
      <div class="col-md-5">
        <div class="card mx-2 bg-light mb-5 pb-2">
          <div class="card-body">
            <%= form_with url: show_results_villa_path(@villa), method: :get, local: true do %>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="start_date"><%= I18n.t('checkin_date') %></label>
                    <%= date_field_tag :start_date, @start_date, class: 'form-control', required: true %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="end_date"><%= I18n.t('checkout_date') %></label>
                    <%= date_field_tag :end_date, @end_date, class: 'form-control', required: true %>
                  </div>
                </div>
              </div>
              <% if @start_date.present? && @end_date.present? %>
                <h3 class="mt-4"><%= I18n.t('villas.show_results.rate_title') %></h3>
                <% if @availability %>
                  <p class="card-text"><strong><%= I18n.t('villas.show_results.price_gst') %>:</strong> â‚¹<%= number_with_delimiter(@total_price) %></p>
                <% else %>
                  <p class="text-danger card-text"><%= I18n.t('villas.show_results.unavailable') %></p>
                <% end %>
              <% else %>
                  <p class="card-text"><%= I18n.t('villas.show_results.date_error') %></p>
              <% end %>
              <%= submit_tag 'Check Availability', class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

