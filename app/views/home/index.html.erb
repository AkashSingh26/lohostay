<div class="pb-5 pt-5" style="background-image: url('<%= asset_path('Banner_1_Greystone_Web.jpg') %>'); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <div class="container">
    <h1 class="my-4">Lohono Stays</h1>
    <div class="card mb-4  w-50">
      <div class="card-body">
        <h2 class="card-title">Search Villas</h2>
        <%= form_with url: search_villas_path, method: :get, local: true, class: 'form-inline' do %>
          <div class="row mb-3">
              <label for="start_date" class="col-sm-2 col-form-label">Start Date</label>
              <div class="col-sm-10">
                <%= date_field_tag :start_date, Date.today, class: 'form-control', required: true %>
              </div>
            </div>
            <div class="row mb-3">
              <label  for="end_date" class="col-sm-2 col-form-label">End Date</label>
              <div class="col-sm-10">
                 <%= date_field_tag :end_date, Date.today, class: 'form-control', required: true %>
              </div>
            </div>
            <%= submit_tag 'Search', class: 'btn btn-primary float-end' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container mt-5">
  <h2 class="my-4">Villas for Rent</h2>
  <div class="row">
    <% @villas.each do |villa| %>
      <div class="col-sm-6">
        <div class="card mb-3">
          <%= image_tag villa.images.first, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= villa.name %></h5>
            <p class="card-text">
              <% today_entry = villa.calendar_entries.find_by(date: @today) %>
              <% if today_entry %>
                <strong>Today's Price:</strong> â‚¹<%= number_with_delimiter(today_entry.price) %><br>
                <strong class="<%= today_entry.available ? 'available' : 'sold-out' %>">
                  Availability: <%= today_entry.available ? 'Available' : 'Sold Out' %>
                </strong>
              <% else %>
                <strong>Availability:</strong> No data for today
              <% end %>
            </p>
            <%= link_to 'Show', show_results_villa_path(villa[:id], start_date: @today, end_date: @today), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
